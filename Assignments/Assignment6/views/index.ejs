<html>
    <head>
        <title>Dashboard</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
        <!-- For DataTables -->
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.css">
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.js"></script>
        

    </head>
    <body>
        <div class="container">
                <center>
                        <div>
                          <a href="/addBug" class="btn btn-success" role="button">Add new</a>
                        </div>
                </center>
                <h2>List of bugs</h2>
                <div class="table-responsive">
                  <table class="table table-hover table-striped" id="myTable">
                    <caption>List of bugs</caption>
                  <thead class = "thead-dark">
                    <tr>
                      <th>Title</th>
                      <th>Description</th>
                      <th>CreatedDate</th>
                      <th>Assignee</th>
                      <th>Left Over Days</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                      <% for(var i=0; i<data.length; i++) {%>
                  <tr>
                    <td><%= data[i].title %></td>
                    <td><%= data[i].description %></td>
                    <td><%= data[i].createdDate %></td>
                    <td><%= data[i].assignee %></td>
                    <%if((data[i].leftOverDays) < 0 ){%>
                    <td><mark><%= data[i].leftOverDays %></mark></td>
                    <%}%>
                    <%if((data[i].leftOverDays) >= 0 ){%>
                    <td><%= data[i].leftOverDays %></td>
                    <%}%>
                    <td>
                        <button type="button" id="<%=data[i].title %>" 
                          class="delete btn btn-danger" 
                          value ="<%=data[i].title %>">
                          delete
                        </button>
                    </td>
                  </tr>
                <% } %>
                  </tbody>
                  <tfoot class="thead-dark">
                    <tr>
                      <th>Title</th>
                      <th>Description</th>
                      <th>CreatedDate</th>
                      <th>Assignee</th>
                      <th>Left Over Days</th>
                      <th>Actions</th>
                    </tr>
                  </tfoot>
                </table>
                <!--  Modal Starts-->
                  <div class="modal fade" id="myModal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                  <!-- Modal Header -->
                                <div class="modal-header">
                                    <h4 class="modal-title">Modal Heading</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
                                  
                                        <!-- Modal body -->
                                        <div class="modal-body">
                                          <div class="container">
                                    <h2>Edit Data</h2>
                                    <form action="/update_bug" method="POST" id="update_bug">
                                      
                                      <div class="form-group">
                                        <label for="name">Title:</label>
                                        <input type="text" class="form-control" id="update_title" placeholder="Enter Bug Title" name="name" required>
                                      </div>
                                      <div class="form-group">
                                        <label for="email">Description:</label>
                                        <input type="text" class="form-control" id="update_description" placeholder="Enter Bug Description" name="email">
                                      </div>
                                      <div class="form-group">
                                        <label for="phone">Assignee:</label>
                                        <input type="email" class="form-control" id="update_phone" placeholder="Enter Assignee" name="phone">
                                      </div>
                                    </form>
                                  </div>
                                        </div>
                
                                        <!-- Modal footer -->
                                        <div class="modal-footer">
                                          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                          <button type="submit" id="update_table" class="btn btn-primary">update</button>
                                        </div>
                                  
                                      </div>
                                    </div>
                                  </div>
        <script type="text/javascript" src="../js/delete.js"></script>
        <script type="text/javascript" src="../js/update.js"></script>
    </body>
</html>
