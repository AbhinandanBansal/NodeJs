<html>

<head>
    <%- include ("./header") %>
    <script type="text/javascript" src="../js/weatherhelper.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8"
        src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.js"></script>


</head>

<body onload="weatherhelper();">
    <table align="center">
        <tr>
            <td>
                <%- include ("./navigation") %>
            </td>
        </tr>
        <tr>
            <td align="center">
                <table width="100%" border="1">
                    <tr>
                        <td><span id="weatherinfo"></span></td>
                        <td><span id="temprature"></span></td>
                        <td><span id="city"></span></td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td>
                <hr>
            </td>
        </tr>
        <tr>
            <td align="center">
                <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-50" src="<%= data[0].imageurl %>" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-50" src="<%= data[1].imageurl %>" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-50" src="<%= data[2].imageurl %>" alt="Third slide">
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <hr>
            </td>
        </tr>
        <tr>
            <td>
                <table width="100%">
                    <tr>
                        <td><a href="<%= data[0].url %>" target="_blank"><%= data[0].title %></a> :
                            <%= data[0].description %></td>
                        <td><a href="<%= data[1].url %>" target="_blank"><%= data[1].title %></a> :
                            <%= data[0].description %></td>
                        <td><a href="<%= data[2].url %>" target="_blank"><%= data[2].title %></a> :
                            <%= data[0].description %></td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td>
                <%- include ("./footer") %>
            </td>
        </tr>
    </table>
</body>

</html>